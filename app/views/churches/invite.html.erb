<!-- START PAGE-CONTAINER -->
    <div class="page-container">
      <!-- START PAGE HEADER WRAPPER -->
      <!-- START HEADER -->
      <div class="header  hidden-xs">          
        <div class=" pull-left sm-table">
          <div class="header-inner">
          
          <div class="pull-right hidden-lg hidden-md p-t-10">
            <%= image_tag("avatar.jpg", :alt => "", :size => "32x32",  data: { src: "avatar.jpg", src_retina: "avatar.jpg" }) %>
            </div>
          <h3 class="pull-left p-l-30">Invite donors to <strong><%= @church.title %></strong></h3>

            <div class="brand inline">
              
            </div> 
            
          </div>
        </div>

      <!-- END HEADER -->
    </div>    


    <!-- START PAGE-CONTAINER -->
    <div class="page-container pull-left">







  <div class="content">
          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg">
            <div id="rootwizard">
              <!-- Nav tabs -->
              <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator ">
                <li class="">
                  <a data-toggle="tab" href="#tab3"><i class="fa fa-check tab-icon"></i> <span>Send out an email</span></a>
                </li>
              </ul>
                <%= form_for(@church ,url: invite_churches_path(@church),  html: { method: :post  },) do |f| %>
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active slide-left" id="tab1">
                
                    <div class="row">
                              <div class="padding-30">

                              <div class="col-md-7">
                                  <label>Email(s) - <i>Separated by commas</i></label>
                                   <%= f.text_field :email,  :placeholder => "john@example.com,mike@example.com", :class => "form-control"  %>
                              </div>
                             </div>
                            </div>
                
                
                
                    <div class="row">
                              <div class="padding-30">

                              <div class="col-md-7">
                                  <label>Subject</label>
                                   <%= f.text_field :subject,  :class => "form-control" , :value => "Your donations greatly appreciated"  %>
                                   
                              </div>
                             </div>
                            </div>
                
                  <div class="row row-same-height">
                    <div class="col-md-12">
                      <div class="padding-30">
                         
						   	 <%= f.text_area :mail_content ,:class => "wysihtml5", :cols => 100, :rows => 20, :value => " <br />Hi,<br />Getting involved in this good cause is a great way of going the extra mile to show your solidarity with our brothers and sisters around the world – and of getting your family and friends involved in our work too! <br />#{link_to 'Click here', church_url(@church)} to make your contribution. <br /><br /><br />Alternatively you should be able to simply copy this <b> #{church_url(@church)} </b> into the browser.<br /><br /><br /> Thank you!  " %>
				
                  </div>
                    </div>
                            <div class="col-md-7">
                      <div class="padding-30">
                         
						   	  <%= f.submit "Send", :class => "btn btn-primary btn-cons pull-right" %>
						   
							
                    
                 
                         
                        </div>

                  </div>  
                        
        
                  </div>
               
                  
                  
                </div>
                
                
          
        
                </div>
                
        <% end %>
                
                
              </div>
              
            </div>
                               
          </div> 







          <!-- END CONTAINER FLUID -->
<!--         </div> -->
        <!-- END PAGE CONTENT -->
      
      
      
        <!-- START FOOTER -->
        <div class="container-fluid container-fixed-lg footer ">
          <div class="copyright sm-text-center">
            <p class="small no-margin pull-left sm-pull-reset">
<!--               <span class="hint-text">© </span> -->
<!--               <span class="font-montserrat">Easy Give Kiosk</span>. -->
<!--               <span class="hint-text">All rights reserved.</span> -->
              <span class="sm-block">© Easy Give Kiosk | <a href="#">Terms of use</a> | <a href="#">Privacy Policy</a> | <a href="login.html" target="_self" class="fa fa-cog small hint-text"></a></span>
            </p>
<!--
            <span class="small no-margin pull-right sm-pull-reset">
              <a href="settings.html" class="fa fa-cog"></a>
            </span>
-->
            <div class="clearfix"></div>
          </div>
        </div>
        <!-- END FOOTER -->
      </div>
      <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTAINER -->
