<!-- START PAGE-CONTAINER -->
    <div class="page-container">
      <!-- START PAGE HEADER WRAPPER -->
      <!-- START HEADER -->
      <div class="header  hidden-xs">          
        <div class=" pull-left sm-table">
          <div class="header-inner">
          
          <div class="pull-right hidden-lg hidden-md p-t-10">
            <%= image_tag("avatar.jpg", :alt => "", :size => "32x32",  data: { src: "avatar.jpg", src_retina: "avatar.jpg" }) %>
            </div>
          <h3 class="pull-left p-l-30"><strong><%= @church.title %></strong></h3>

            <div class="brand inline">
              <!--
<img src="assets/img/logo.png" alt="logo" data-src="assets/img/logo.png" data-src-retina="assets/img/logo_2x.png" width="78" height="22">
             
-->
            </div> 
            
          </div>
        </div>
        <div class=" pull-right">
          <!-- START User Info-->
          <div class="visible-lg visible-md m-t-10">
            <div class="pull-left p-r-10 p-t-10 fs-16 font-heading">
              <span class="semi-bold">Secure</span> <span class="text-master">Form</span>
            </div>
            <div class="dropdown pull-right">
              <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="thumbnail-wrapper d32 circular inline m-t-5">
                <%= image_tag("avatar.jpg", :alt => "", :size => "32x32",  data: { src: "avatar.jpg", src_retina: "avatar.jpg" }) %>
            </span>
              </button>
            </div>
          </div>  
          <!-- END User Info-->
        </div>
      <!-- END HEADER -->
    </div>    


    <!-- START PAGE-CONTAINER -->
    <div class="page-container pull-left">
      
        <%= form_for(@church ,url: church_path(@church),  html: { method: :put  },:id => 'donation_form') do |f| %>
      	<%= f.fields_for :donations, Donation.new  do |d| %>

           <!-- START PAGE CONTENT WRAPPER -->
<!--       <div class="page-content-wrapper"> -->
        <!-- START PAGE CONTENT -->
        <div class="content">
          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg">
            <div id="rootwizard">
              <!-- Nav tabs -->
              <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator ">
                <li class="active">
                  <a data-toggle="tab" href="#tab1"><i class="fa fa-shopping-cart tab-icon"></i> <span>Home</span></a>
                </li>
                <li class="">
                  <a data-toggle="tab" href="#tab2"><i class="fa fa-credit-card tab-icon"></i> <span>Card</span></a>
                </li>
                <li class="">
                  <a data-toggle="tab" href="#tab3"><i class="fa fa-check tab-icon"></i> <span>Done</span></a>
                </li>
              </ul>
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active slide-left" id="tab1">
                  <div class="row row-same-height">
                    <div class="col-md-12">
                      <div class="padding-30">
                        
                        <h5><strong>Welcome to our<span class="hidden-xs"> self serve</span> donation kiosk.</strong></h5>
                        <div class="row">
                          <div class="col-lg-5 col-md-6">
                            <p class="no-margin">Please choose the amount that you would like to contribute to First Methodist Church. </p>

                          </div>
                          <div class="visible-lg visible-md visible-sm col-lg-7 col-md-6">
                            <div class="btn-group pull-right" data-toggle="buttons" id="pricegroup">
                              <label class="btn btn-default active">
                                <input type="radio" name="options" value="5" checked> <span class="fs-16">$5</span>
                              </label>
                              <label class="btn btn-default">
                                <input type="radio" name="options" value="10"> <span class="fs-16">$10</span>
                              </label>
                              <label class="btn btn-default">
                                <input type="radio" name="options" value="25"> <span class="fs-16">$25</span>
                              </label>
                              <label class="btn btn-default">
                                <input type="radio" name="options" value="50"> <span class="fs-16">$50</span>
                              </label>
                              <label class="btn btn-default">
                                <input type="radio" name="options" value="100"> <span class="fs-16">$100</span>
                              </label>
                              <label class="btn btn-default">
                                <input type="radio" name="options" value="250"> <span class="fs-16">$250</span>
                              </label>
                        </div>
                          </div>
                          
                          <div class="visible-xs col-lg-7 col-md-6">
                          <br>
                            <div class="btn-group pull-right" data-toggle="buttons">

                                <select class="cs-select cs-skin-slide" data-init-plugin="cs-select">
                                  <option selected>Select</option>
                                  <option>$5</option>
                                  <option>$10</option>
                                  <option>$25</option>
                                  <option>$50</option>
                                  <option>$100</option>
                                  <option>$250</option>

                                </select>
                              
                              
                              
                                                          </div>
                          </div>
                        </div>

                  </div>
                    </div>
                  </div>
                </div>
                
 
                
                <div class="tab-pane slide-left padding-20" id="tab2">
                  <div class="row row-same-height">

                    <div class="col-md-12">
                      <div class="padding-0">

                          <div class="b-rad-lg">
							
                            <h3 class="pull-left no-margin">$<span id="display_amt">5.30</span> charge to your card.</h3><br>
                            <small class="pull-left no-margin hint-text">$0.30 fee added to support donation software.</small>
                            <ul class="list-unstyled pull-right list-inline no-margin">
                              <li>
                                <%= image_tag("cards.png", :alt => "", :class => "brand hidden-xs", :size => "274x30",  data: { src: "cards.png", src_retina: "cards.png" }) %>
                                
                              </li>

                            </ul>
                            <div class="clearfix"></div>
                            <%= d.hidden_field :amount, :id => "amount", :value => 5.30 %>
                            <div class="form-group form-group-default required m-t-25">
                              <label>Card holder's name</label>
                              
                              <%= d.text_field :name, :placeholder => "Name on the card", :class => "form-control", :required => true%>
                              
                            </div>
                            <div class="form-group form-group-default required">
                              <label>Card number</label>
                              <input type="text"  data-stripe="number" pattern="\d*" class="form-control" placeholder="8888-8888-8888-8888" value="4000000000000077" required>
                            </div>
                            
                           <div class="form-group form-group-default required">
                           <label>CVC</label>
						      <input type="text" size="4" class="form-control" value="120" data-stripe="cvc"/>
  							</div>
  							
                            <div class="row">
                             <div class="form-group">

                              <div class="col-md-4">
                                <label>Expiration Date</label>
                                <br>
                                <select class="cs-select cs-skin-slide" data-init-plugin="cs-select"  data-stripe="exp-month"> 
                                  <option value="01" selected>Jan (01)</option>
                                  <option value="02">Feb (02)</option>
                                  <option value="03">Mar (03)</option>
                                  <option value="04">Apr (04)</option>
                                  <option value="05">May (05)</option>
                                  <option value="06">Jun (06)</option>
                                  <option value="07">Jul (07)</option>
                                  <option value="08">Aug (08)</option>
                                  <option value="09">Sep (09)</option>
                                  <option value="10">Oct (10)</option>
                                  <option value="11">Nov (11)</option>
                                  <option value="12">Dec (12)</option>
                                </select>
                                <select class="cs-select cs-skin-slide" data-init-plugin="cs-select" data-stripe="exp-year">
                                  <option value="2016">2016</option>
                                  <option value="2017">2017</option>
                                  <option value="2018">2018</option>
                                  <option value="2019">2019</option>
                                  <option value="2020">2020</option>
                                  <option value="2021">2021</option>
                                  <option value="2022">2022</option>
                                  <option value="2023">2023</option>
                                  <option value="2024">2024</option>
                                  <option value="2025">2025</option>
                                  <option value="2026">2026</option>
                                  <option value="2027">2027</option>
                                  <option value="2028">2028</option>
                                  <option value="2029">2029</option>
                                  <option value="2030">2030</option>                                  
                                  <option value="2031">2031</option>
                                  <option value="2032">2032</option>
                                </select>
                              </div>
                              <div class="col-md-8">
                                  <label>Email Address (Optional)</label>
                                   <%= d.email_field :email,  :placeholder => "Email Receipt?", :class => "form-control"  %>
                              </div>
                             </div>
                            </div>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="tab-pane slide-left padding-20" id="tab3">
					
					<p class="small">Your payment will be processed now.</p>
                    <p class="small">Your credit card statement will show "Stripe" as your donation description.</p>
                    


				</div>
                </div>
                
                
                <div class="payment-errors alert alert-error hide">
                </div>
                
                
                
                
                <div class="padding-20 bg-white">
                  <ul class="pager wizard">
                    <li class="next">
                      <button class="btn btn-primary btn-cons pull-right" type="button">
                        <span>Next</span>
                         
                      </button>
                    </li>
                    <li class="previous first hidden">
                      <button class="btn btn-default btn-cons pull-right" type="button">
                        <span>First</span>
                      </button>
                    </li>
                       <li class="next finish hidden">
                           <%= d.submit "All Done", :class => "btn btn-primary btn-cons pull-right", :id => "commit"  %>
                      
                    </li>
                    <li class="previous">
                      <button class="btn btn-default btn-cons pull-right" type="button">
                        <span>Previous</span>
                      </button>
                    </li>
                  </ul>
                </div>
                
                
                
                
                             
          
          
          
          
          
          
          
                
                
              </div>
              
            </div>
                               
          </div>      <% end %>    
      <% end %>
