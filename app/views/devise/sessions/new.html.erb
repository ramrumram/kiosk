<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="field">
  
  <p><%= f.label :login %><br />
   <%= f.text_field :login %></p>
    
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

