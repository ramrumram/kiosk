<!-- START PAGE-CONTAINER -->
    <div class="page-container">
      <!-- START PAGE HEADER WRAPPER -->
      <!-- START HEADER -->
      <div class="header  hidden-xs">
        <div class=" pull-left sm-table">
          <div class="header-inner">

          <div class="pull-right hidden-lg hidden-md p-t-10">
            <%= image_tag("avatar.jpg", :alt => "", :size => "32x32",  data: { src: "avatar.jpg", src_retina: "avatar.jpg" }) %>
            </div>
          <h3 class="pull-left p-l-30">Forgot your password?</h3>

            <div class="brand inline">

            </div>

          </div>
        </div>

      <!-- END HEADER -->
    </div>


    <!-- START PAGE-CONTAINER -->
    <div class="page-container pull-left">







  <div class="content">
          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg">
            <div id="rootwizard">
              <!-- Nav tabs -->
              <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator ">
                <li class="">
                  <a data-toggle="tab" href="#tab3"><i class="fa fa-check tab-icon"></i> <span>Send out an email</span></a>
                </li>
              </ul>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= devise_error_messages! %>
              <!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active slide-left" id="tab1">

                    <div class="row">
                              <div class="padding-30">

                              <div class="col-md-7">
                                <%= f.label :email %>
                                <%= f.email_field :email, autofocus: true, :class => "form-control" %>


                              </div>
                             </div>
                            </div>




                  <div class="row row-same-height">

                            <div class="col-md-7">
                      <div class="padding-30">

						   	  <%= f.submit "Send me reset password instructions" %>





                        </div>

                  </div>


                  </div>



                </div>




                </div>

        <% end %>
<%= render "devise/shared/links" %>

              </div>

            </div>

          </div>







          <!-- END CONTAINER FLUID -->
<!--         </div> -->
        <!-- END PAGE CONTENT -->



        <!-- START FOOTER -->
  <%= render "layouts/footer" %>
        <!-- END FOOTER -->
      </div>
      <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTAINER -->
