<h2>Free donation & tithe pages.</h2>
<h6>Build a donation page for your organization's website, or setup your own tithe kiosk for free.  <a href="examples">Click here to see some examples.</a></h6>
          <p class="p-t-35">Sign into your EasyGiveKiosk.com account</p>
          <!-- START Login Form -->


           <%= form_for(resource, as: resource_name, url: session_path(resource_name),  :html => {:class => "p-t-15"}) do |f| %>
            <!-- START Form Control-->
            <div class="form-group form-group-default">
              <label>Login</label>
              <div class="controls">

   				<%= f.text_field :login, :placeholder => "UserName", :class => "form-control", :required => true%></p>

              </div>
            </div>
            <!-- END Form Control-->
            <!-- START Form Control-->
            <div class="form-group form-group-default">
              <label>Password</label>
              <div class="controls">

		    <%= f.password_field :password, autocomplete: "off", :placeholder => "Credentials", :class => "form-control",:required => true %>

              </div>
            </div>
            <!-- START Form Control-->
            <div class="row">
              <div class="col-md-6 no-padding">
                <div class="checkbox ">


      			<%= f.check_box :remember_me, id:"checkbox1" %>
                  <label for="checkbox1">Keep Me Signed in</label>
                </div>
              </div>
              <div class="col-md-6 text-right">
                <a href="#" class="text-info small">Help? Contact Support</a>
              </div>
              <div class="col-md-6 text-right">
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              </div>
            </div>
            <!-- END Form Control-->
             <%= f.submit "Sign in", :class => "btn btn-primary btn-cons m-t-10 pull-left" %>
             <%= link_to "Register", new_registration_path(resource_name),  :class => "btn btn-success btn-cons m-t-10 pull-right", :role => "button"%>


         <% end %>
          <!--END Login Form-->
