    <!-- START PAGE CONTENT WRAPPER -->
      <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg bg-white">





            <!-- START PANEL -->
            <div class="panel panel-transparent">
              <div class="panel-heading">
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-sm-10">
                    <h3>Setup</h3>
                    <p>Welcome to Easy Give Kiosk! The ONLY 100% free donation / kiosk software on the web. Before you begin to use your new donation page, we must know how to title it and you must have a merchant account.
                       <p class="small hint-text pull-right">
                        <%= link_to "Click here ",	edit_user_path(resource_name),  :class => "", :role => "button", :remote => true, :data => {:toggle=>"modal", :target => "#ajax-modal"} %>to change your password.


                          </p>
                    </p>
                    <br>
					<%= devise_error_messages! %>

                    <%= form_for(setup_user(resource), as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>







                    <div class="form-group">
                      <label for="fname" class="col-sm-3 control-label">TITLE OF KIOSK FORM</label>
                      <div class="col-sm-9">
                      <%= f.fields_for :kiosk do |ff| %>
                        <%= ff.text_field :title, :placeholder => "Example: First Church Tithe", :class => "form-control", :maxlength => 20, :required => true%>


                      <% end %>
                      </div>
                    </div>


                      <div class="form-group">
                        <label for="fname" class="col-sm-3 control-label">YOUR WEBSITE</label>
                        <div class="col-sm-9">
                           <p class="hint-text small">You can share the link, post it on your email or even display on your own website.</p>
                           <%= preview_link(resource) %>


                        </div>
                      </div>


                      <div class="form-group">
                        <label class="col-sm-3 control-label">Stripe Payments</label>
                        <div class="col-sm-9">

                          <p>

						<% if (f.object.merchid)%>
						<b class="alert alert-success"> Merchant account provided</b>
            <% else %>
              <p>In order to accept donations by any credit card, you will need a merchant account. Getting a merchant account for most businesses, including non-profits is easy. If you need help, feel free to call (310) 878-2967 for assistance. </p>
                <div class="row">
                     <div class="col-sm-9">
                       <%= link_to "Activate Card Processing",	new_activation_path(),  :class => "btn btn-complete", :role => "button"%>
                       <!--                           <button class="btn btn-default"><i class="pg-close"></i> Clear</button> -->

                     </div>
                       </div>
						<% end %>
    					</p>




                        </div>
                      </div>

                      <br>
                      <div class="row col-sm-12">
                        <div class="col-sm-6">
                        <%= f.submit "Save", :class => "btn btn-success" %>

	                    </div>
                      </div>

                    <% end %>

                  </div>
                </div>
              </div>
            </div>
            <!-- END PANEL -->
          </div>
          <!-- END CONTAINER FLUID -->
        </div>
