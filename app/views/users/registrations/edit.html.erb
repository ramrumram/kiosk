    <!-- START PAGE CONTENT WRAPPER -->
      <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
          <!-- START CONTAINER FLUID -->
          <div class="container-fluid container-fixed-lg bg-white">
   

         
   

            <!-- START PANEL -->
            <div class="panel panel-transparent">
              <div class="panel-heading">
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-sm-10">
                    <h3>Kiosk Settings</h3>
                    <p>Please complete all fields. The setup of your Stripe account is required, this is what processes the credit card payments. They are only 2.9% plus $0.30 per transaction. We have chosen to use them as the payment processor because of their flat rate pricing, no credit card reader required, great customer support and quick funding.
                    </p>
                    <br>
					<%= devise_error_messages! %>

                    <p class="small hint-text">Please provide the contact information of whomever is authorized to accept these funds.</p>
                    
                    <%= form_for(setup_user(resource), as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
                                        
                      <div class="form-group">
                        <label for="fname" class="col-sm-3 control-label">First & Last Name</label>
                        <div class="col-sm-4 m-b-10">
                          <%= f.text_field :first_name, :placeholder => "John", :class => "form-control", :required => true%>
                          
                        </div>
                        <div class="col-sm-5">
						<%= f.text_field :last_name, :placeholder => "Smith", :class => "form-control", :required => true%>
                        
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="fname" class="col-sm-3 control-label">Username</label>
                        <div class="col-sm-9">
                        <%= f.text_field :username, :placeholder => "mychurch123", :class => "form-control", :disabled => true%>
                          
                          <small>
                          <%= link_to "Change Password",	edit_user_path(resource_name),  :class => "", :role => "button", :remote => true, :data => {:toggle=>"modal", :target => "#ajax-modal"} %>
                          
                          </small>
                        </div>
                      </div>
                      
                      


                      
                      
                      <div class="form-group">
                        <label for="fname" class="col-sm-3 control-label">Email Address</label>
                        <div class="col-sm-9">
                         <%= f.email_field :email, :placeholder => "Where do we send donation stats to?", :class => "form-control", :required => true%></p>
                          
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="fname" class="col-sm-3 control-label">Title of Donation Form</label>
                        <div class="col-sm-9">
                        <%= f.fields_for :church do |ff| %>
                        	<%= ff.text_field :title, :placeholder => "Example: First Church Tithe", :class => "form-control", :maxlength => 20, :required => true%>
                        	<%= preview_link(resource) %> <%= invite_link(resource) %>
                        	  
                        <% end %>  
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="fname" class="col-sm-3 control-label">Telephone Number</label>
                        <div class="col-sm-9">
                         <%= f.text_field :phone, :placeholder => "808-555-1212", :class => "form-control", :required => true%>
                          
                        </div>
                      </div>
                      
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Stripe Payments</label>
                        <div class="col-sm-9">
                          <p>Please enter your Stripe Live Secret Key & Stripe Live Publish Key.</p>
                          <p class="hint-text small">If you do not yet have a Stripe account, <a href="#" target="_blank">please click</a> here to create one, it is free. Copy and paste into the below fields.</p>
                          <div class="row">
                            <div class="col-sm-6">
                              <%= f.text_field :stripe_pub_key, :placeholder => "Stripe Live Publish Key", :class => "form-control"%>
                              
                            </div>
                            <div class="col-sm-6 sm-m-t-10">
                            <%= f.text_field :secret_key, :placeholder => "Stripe Live Secret Key", :class => "form-control"%>
                              
                            </div>
                          </div>
                        </div>
                      </div>
                                           
                      <br>
                      <div class="row col-sm-12">
                        <div class="col-sm-6">
                        <%= f.submit "Save & Launch App", :class => "btn btn-success" %>
                          
	                    </div>
                      </div>
                    
                    <% end %>
                    
                  </div>
                </div>
              </div>
            </div>
            <!-- END PANEL -->
          </div>
          <!-- END CONTAINER FLUID -->
        </div>
