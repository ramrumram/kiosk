<div class="register-container full-height sm-p-t-30">


      <div class="container-sm-height full-height">
        <div class="row row-sm-height">
          <div class="col-sm-12 col-sm-height col-middle">
<!--             <img src="assets/img/logo.png" alt="logo" data-src="assets/img/logo.png" data-src-retina="assets/img/logo_2x.png" width="78" height="22"> -->
            <h3>Signup</h3>
            <p>

                Welcome to Easy Give Kiosk! The ONLY 100% free donation / kiosk software on the web.


            </p>
            <% if @user.errors.any? %>


    <% @user.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger" role="alert"><%= msg %></div>
    <% end %>

<% end %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  :html => {:class => "p-t-15"}) do |f| %>

              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Username</label>
                    <%= f.text_field :username, :placeholder => "mychurch123", :class => "form-control", :required => true%>

                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Password</label>
                    <%= f.password_field :password, :placeholder => "6 characters minimum", :class => "form-control", :required => true%>

                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Email</label>
                    <%= f.email_field :email, :placeholder => "We'll send login details and notifications here", :class => "form-control", :required => true%></p>
                  </div>
                </div>
              </div>
              <div class="row">
              <div class="col-md-12">
                <div class="checkbox ">
                   <%= f.check_box :terms, id:"checkbox1" %>
                  <label for="checkbox1">I agree to <a href="/terms" target="_new">terms</a>.</label>

                </div>

              </div>

            </div>
             <%= f.submit "Create a new account", :class => "btn btn-primary btn-cons m-t-10" %>

            <% end %>
          </div>
        </div>
      </div>
    </div>
